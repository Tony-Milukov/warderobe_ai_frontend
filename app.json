{
  "expo": {
    "name": "AI Wardrobe",
    "slug": "ai-wardrobe-app",
    "owner": "tony-milukov",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "scheme": "ai-wardrobe",
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#6366F1"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.yourcompany.aiwardrobe",
      "infoPlist": {
        "CFBundleURLTypes": [
          {
            "CFBundleURLSchemes": [
              "ai-wardrobe"
            ]
          }
        ],
        "NSCameraUsageDescription": "This app needs access to camera to take photos of your clothing items.",
        "NSPhotoLibraryUsageDescription": "This app needs access to photo library to select images of your clothing items."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#6366F1"
      },
      "package": "com.yourcompany.aiwardrobe",
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro"
    },
    "plugins": [
      "expo-router",
      "expo-apple-authentication"
    ],
    "extra": {
      "apiBaseUrl": "http://192.168.0.213:3000/api",
      "apiTimeout": "${EXPO_PUBLIC_API_TIMEOUT}",
      "googleClientId": "${EXPO_PUBLIC_GOOGLE_WEB_CLIENT_ID}",
      "eas": {
        "projectId": "your-project-id-here"
      }
    }
  }
}